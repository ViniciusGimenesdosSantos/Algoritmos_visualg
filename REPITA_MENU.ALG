Algoritmo "REPITA_MENU"

Var
opicao : inteiro

Inicio
Repita
      escreval("1 - Dizer Olá")
      escreval("2 - Dizer Oi")
      Escreval("0 - Sair do programa")
      leia (opicao)
      
      se opicao=1 entao
      escreval ("Olá")
      fimse
      
      se opicao=2 entao
      escreval ("Oi")
      fimse
      
ate opicao=0
escreval ("Saiu da repetição")


Fimalgoritmo